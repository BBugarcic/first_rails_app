<section class="page-title">
  <h1>Contact</h1>
</section>

<%= render "shared/separator" %>

<section>
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <%= flash[:notice] %>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= form_tag("/static_pages/thank_you") do %>
          <div class="form-group">
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
          </div>
          <div class="form-group">
            <%= label_tag :email, "Email Address" %>
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
          </div>
          <div class="form-group">
            <%= label_tag :message %>
            <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
          </div>
          <%= submit_tag "Send", class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</section>
