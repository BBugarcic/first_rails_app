<div class="contact-title-bg">
  <div class="page-title-wrapper">
    <div class="center-title">
      <h1>Contact</h1>
      <div class="hide-separator-on-small">
        <%= render "shared/separator" %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-xs-12 contact-text">
      <h4 class="greeting">Address</h4>
      <p>Examplestra√üe NO#</p>
      <p>Berlin, PLZ</p>
      <p>Germany</p>
      <h4 class="greeting">Phone</h4>
      <p>+4930#########</p>
      <h4 class="greeting">Opening Hours</h4>
      <p>Mon-Fri: 10-18</p>
      <p class="thin-bottom">Sa: 10-16</p>

    </div>
    <%= form_for @message, url: {action: "thank_you"}, :html => {:class => "col-sm-6 col-xs-12"} do |f| %>

      <% if @message.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@message.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h4 class="greeting-left">Send us a message</h4>
      <div class="col-xs-12">
        <label for="inputName" class="sr-only">First Name</label>
        <%= f.text_field :name, class: "form-control input-md", autofocus: true, placeholder: "Name" %><br>
        <label for="inputName" class="sr-only">Surname</label>
        <%= f.text_field :surname, class: "form-control input-md", autofocus: true, placeholder: "Surname" %><br>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= f.text_field :email, class: "form-control input-md", autofocus: true, placeholder: "Email Address" %><br>
        <label for="inputText" class="sr-only">Message</label>
        <%= f.text_area :content, class: "form-control", placeholder: "Your Message" %><br>
      </div>

      <div class="col-xs-2 col-xs-offset-10">
        <%= f.submit "Send", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
