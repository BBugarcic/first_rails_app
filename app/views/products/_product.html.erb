<div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-0 col-xs-8 col-xs-offset-2 product-holder">
  <div class="product-wrapper">
    <div class="product-img-wrapper">
      <%= image_tag(product.image_url, class: "pics") %>
    </div>
    <h4 class="thin-bottom"><%= product.name %></h4>
    <p>Description: <%= product.description %><p>
    <p>Color: <%= product.color %></p>
    <p>Price: <%= product.price %> &euro;</p>
    <p class="scaffolded-link"><%#= link_to 'Edit', edit_product_path(product), class: "scaffolded-link white" %> <%= link_to 'Show', product, class: "scaffolded-link white" %></p>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "scaffolded-link white" %></p>
  </div>
</div><!-- /col -->
