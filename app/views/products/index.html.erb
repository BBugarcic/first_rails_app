
<p id="notice"><%= notice %></p>

<h1 class="page-title">Buy</h1>
<div class="separator-wrapper">
    <div class="separator line-separator">
      <i class="small-bike fa fa-bicycle" aria-hidden="true"></i>
    </div>
</div>

<div class="container">
  <div class="row is-flex">
    <% @products.each do |product| %>
      <div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-0 col-xs-8 col-xs-offset-2 item">
        <div class="product-wrapper">
          <div class="product-img-wrapper">
            <%= image_tag(product.image_url, class: "pics") %>
          </div>
          <h4 class="thin-bottom"><%= product.name %></h4>
          <p>Description: <%= product.description %><p>
          <p>Color: <%= product.color %></p>
          <p>Price: <%= product.price %> &euro;</p>
          <p><%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Show', product %></p>
          <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
