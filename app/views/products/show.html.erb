<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row show-wrapper">
    <div class="col-md-4 col-md-offset-1 col-sm-6 col-xs-12">
      <%= image_tag(@product.image_url, class: "show-picture thumbnail img-responsive") %>
    </div>
    <div class="col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-1 col-xs-12">
      <h3 class="show-title">
        <%= @product.name %>
      </h3>
      <p><strong>Description:</strong>
      <%= @product.description %>
      <p><strong>Color:</strong>
        <%= @product.color %></p>
      <p>Avarage Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
      <p><strong>Price:</strong>
        <%= @product.price %> &euro;</p>
        <%= link_to 'Edit', edit_product_path(@product), class: "scaffolded-link" %> |
        <%= link_to 'Back', products_path, class: "scaffolded-link" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= render "new_comment" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= render "comments" %>
    </div>
  </div>
</div>
