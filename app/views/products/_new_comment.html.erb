<% if signed_in? %>
  <h4 class="greeting">Add a review:</h4>
  <%= form_for([@product, @product.comments.build], class: "form-horizontal") do |f| %>
  <div class="row">
    <div class="col-sm-6 col-xs-12 comment">
      <%= f.text_area :body, class: "form-control", placeholder: "Your comment" %>
    </div>
    <div class="col-sm-4 col-xs-12 comment">
      <%= f.label :rating %>
      <div class="rating"></div>
    </div>
  </div>
  <div>
    <%= f.submit "Submit", class: "btn btn-default" %>
  </div>
  <% end %>
<% end %>
