<div class="bg">
  <div class="bg-cover">
    <div class="signin-wrapper">
      <h2 class="signin-title">Sign up</h2>
      <div class="hide-separator-on-small">
        <%= render "shared/separator" %>
      </div>
      <div class="notice-wrapper text-center">
        <p class="notice alert"><%= notice %> <%= alert %></p>
      </div>
      <div class="row no-margin">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0"}) do |f| %>
          <%= devise_error_messages! %>
          <div class="col-xs-12">
            <label for="inputEmail" class="sr-only">Email address</label>
            <%= f.email_field :email, class: "form-control input-lg", autofocus: true, placeholder: "Email address" %>
          </div>

          <div class="col-xs-12">
            <label for="inputPassword" class="sr-only">Password</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "form-control input-lg", autocomplete: "off", placeholder: "Password" %>
            <label for="inputPassword" class="sr-only">Password</label>            <%= f.password_field :password_confirmation, class: "form-control input-lg", autocomplete: "off", placeholder: "Password Confirmation" %>
          </div>

          <div class="form-group col-xs-12 col-xs-12 col-xs-offset-0">
            <%= f.submit "Sign up", class: "btn btn-lg btn-block" %>
          </div>
        <% end %>
        <div class="row no-margin">
          <div class="col-sm-8 col-sm-offset-2">
            <div class="devise-shared">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
