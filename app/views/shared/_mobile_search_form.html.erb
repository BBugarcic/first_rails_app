<%= form_tag("/products", method: "get", class: "form-horizontal") do %>
  <div class="form-group">
    <%= label_tag(:q, "Search for:", class: "control-label col-xs-6 col-xs-offset-3") %>
    <div class="col-xs-6 col-xs-offset-3">
      <%= text_field_tag(:q, nil, class: "form-control") %>
    </div>

  </div>
  <div class="form-group">
    <div class="col-xs-6 col-xs-offset-3">
      <%= submit_tag("Search", class: "btn btn-default btn-sm") %>
    </div>
  </div>

<% end %>
